extends layouts/layout

block vars
	- var title = 'Teste Escale'
	- var keywords = 'Desenvolvedor Front-end, Desenvolvedor Full Stack, Sites, Sites Responsivos, WordPress, Mobile First'
	- var description = 'Desenvolvedor especializado em sites, sites responsivos, sistemas MVC, CodeIgniter, WordPress e Mobile First'

	div.container
		.grid-6
			p Filtrar por Linguagem: 
			select(id='filter-language')
				option(value='JavaScript') JavaScript
				option(value='Ruby') Ruby
				option(value='Dart') Dart
				option(value='CoffeeScript') CoffeeScript
				option(value='CSS') CSS
				option(value='Shell') Shell
				option(value='HTML') HTML
				option(value='Python') Python
				option(value='PHP') PHP
				option(value='All') All

		.grid-6
			p Ordenar: 
			select(id='order')
				option(value='Alphabetically') Alphabetically
				option(value='Stars') Stars
				option(value='Open Issues') Open Issues

	div.container#gerar

block content